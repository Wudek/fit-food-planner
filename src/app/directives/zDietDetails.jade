.row
	.small-2.columns
		h4 Food
	.small-1.small-offset-5.columns.small-text-center
		h4 Protein
	.small-1.columns.small-text-center
		h4 Carbs
	.small-1.columns.end.small-text-center
		h4 Fats
	div.row(ng-repeat='meal in diet.meals')
		.small-12.columns
			p {{meal.name}}
		.row(ng-repeat='foodItem in meal.foodItems')
			.small-2.columns
				select
					option {{foodItem.food.name}}
			.small-2.columns
				input(type='number', min='0', ng-model='foodItem.quantity')
			.small-2.columns
				select(ng-model='foodItem.quantityType', ng-options='type for type in foodItem.getQuantityTypes()')
			.small-1.small-offset-1.columns.small-text-center
				p {{foodItem.getProtein() | number:1}}g
			.small-1.columns.small-text-center
				p {{foodItem.getCarbs()| number:1}}g
			.small-1.columns.small-text-center
				p {{foodItem.getFats() | number:1}}g
			.small-1.small-offset-1.columns
				button.tiny
					i.fi-trash